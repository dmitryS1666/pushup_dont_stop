<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PushupBorderButton">
        <item name="android:background">@drawable/button_bordered</item>
        <item name="android:textColor">#FFD700</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="PlainTextButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">64sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <!-- Стиль для текста даты -->
    <style name="CustomCalendarText">
        <item name="android:textColor">#FFFFFF</item> <!-- Белый текст -->
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Стиль для текста дней недели -->
    <style name="CustomCalendarDayOfWeekText">
        <item name="android:textColor">#FFFFFF</item> <!-- Белый текст -->
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Стиль для текста заголовка (месяц) -->
    <style name="CustomCalendarHeaderText">
        <item name="android:textColor">#FFFFFF</item> <!-- Белый текст -->
        <item name="android:textSize">18sp</item>
    </style>
</resources>